generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  course_id        String @id
  course_name      String
  department       String @db.VarChar(100)
  level            Level
  delivery_mode    DeliveryMode
  credits          Int
  duration_weeks   Int
  rating           Float
  tuition_fee_inr  Int
  year_offered     Int

  @@index([department])
  @@index([level])
  @@index([delivery_mode])
  @@index([tuition_fee_inr])
  @@index([rating])
  @@index([year_offered])
}

enum Level {
  UG
  PG
}

enum DeliveryMode {
  online
  offline
  hybrid
}


